{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "CMake Build",
			"type": "shell",
			"command": "cmake",
			"args": [
				"-B",
				"build"
			],
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		},
		{
			"label": "CMake Compile",
			"type": "shell",
			"command": "cmake",
			"args": [
				"--build",
				"build"
			],
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		}
	]
}